@if (IsVisible)
{
    @if (!string.IsNullOrEmpty(LabelText))
    {
        <div class="input-container">
            <label class="mb-2" for="inputField">
                @LabelText
                @if (IsRequired)
                {
                    <span class="red">*</span>
                }
            </label>
        </div>
    }
    <div class="input-container">

        @if (InputType == "date")
        {
            <input @attributes="GetInputAttributes()" @bind-value="InputValue" @bind-value:event="oninput" type="@InputType" maxlength="@InputMaxLength" min="1900-01-01" />
        }
        else
        {
            <input @attributes="GetInputAttributes()" @bind-value="InputValue" @bind-value:event="oninput" type="@InputType" maxlength="@InputMaxLength" />
        }
        
    </div>
}