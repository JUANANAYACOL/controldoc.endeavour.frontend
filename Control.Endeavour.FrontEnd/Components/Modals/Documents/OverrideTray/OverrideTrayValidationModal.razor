<TelerikRootComponent>

    <GenericModalComponent Title="Bandeja de anulación - Informacion General" IsVisible="modalStatus" OnModalClosed="HandleModalClosed" Width="70%">
        <ChildContent>
            <div class="container padding-modals-container">
                <div class="col-md-12">
                    <div class="row">

                        <div class="col-12 col-md-12 mb-2">
                            <div class="from-group from-group--margin-top justify-content-md-start">
                                <button class="btnStyle btnStyle--primaryInLine" type="button" @onclick="ShowPdfViewer">Imagen PDF</button>

                            </div>
                        </div>

                        <div class="col-12 @ColTableData mb-2">
                            <TelerikTabStrip PersistTabContent="true">
                                <TabStripTab Title="Información del documento">
                                    <table class="table table-bordered">
                                        <tbody>
                                            @foreach (var item in dataInfoDocument)
                                            {
                                                <tr>
                                                    <td><b>@item.Key</b></td>
                                                    <td style="word-break: break-word;">
                                                        @item.Value
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </TabStripTab>
                                <TabStripTab Title="Información de la TRD">
                                    <table class="table table-bordered">
                                        <tbody>
                                            @foreach (var item in dataInfoTrd)
                                            {
                                                <tr>
                                                    <td><b>@item.Key</b></td>
                                                    <td style="word-break: break-word;">
                                                        @item.Value
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </TabStripTab>
                            </TelerikTabStrip>
                        </div>

                        <div class="col-12 col-md-6 mb-2 @DisplayPdfViewer">
                            <div class="row mb-2 ustify-content-md-end">
                                <div class="col-6 col-md-6 mb-2">
                                    <ButtonComponent BtnClassColor="btnStyle--primary" BtnClassModifiers=" ml-10" BtnType="button" BtnText="Ocultar" BtnOnClick="HidePdfViewer" BtnIcon="fa-solid fa-plus"></ButtonComponent>
                                    <ButtonComponent BtnClassColor="btnStyle--primary" BtnClassModifiers=" ml-10" BtnType="button" BtnText="Ampliar" BtnOnClick="ShowPdfComplete" BtnIcon="fa-solid fa-plus"></ButtonComponent>

                                </div>
                            </div>

                            <div class="row">
                                <TelerikPdfViewer @ref="@PdfViewerRef"
                                                  Width="100%"
                                                  Height="100vh"
                                                  Data="@FileData">
                                </TelerikPdfViewer>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </ChildContent>
    </GenericModalComponent>
</TelerikRootComponent>
