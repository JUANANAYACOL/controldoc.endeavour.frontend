<div class="my-modal">
    <TelerikRootComponent>
        <GenericModalComponent Title="Administración - Reemplazos" IsVisible="modalStatus" OnModalClosed="HandleModalClosed" width="70%">
            <ChildContent>
                <NotificationsComponentModal @ref="notificationModal" OnModalClosed="HandleModalNotiClose"></NotificationsComponentModal>
                
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="row">
                                <div class="col-lg-6">
                                    <label class="mb-2">Desde <span class="red">*</span></label>
                                    <TelerikDatePicker @bind-Value="@from"
                                                       Format="MM/dd/yyyy"
                                                       ShowWeekNumbers="false"
                                                       Max="@maxValueTo"
                                                       OnChange="@updateMinValue">
                                    </TelerikDatePicker>
                                    <label class="mb-2">Hasta <span class="red">*</span> </label>
                                    <TelerikDatePicker @bind-Value="@to"
                                                       Format="MM/dd/yyyy"
                                                       ShowWeekNumbers="false"
                                                       Min="@minValueTo"
                                                       OnChange="@updateMaxValue">
                                    </TelerikDatePicker>
                                </div>
                                <div class="col-lg-6">
                                    <div class="row">
                                        <ButtonGroupComponent LabelText="Usuario:" InputPlaceholder="Agregar usuario" BtnTitle="Agregar usuario" @ref="inputUserFullname" @bind-InputValue="userFullname" InputRequired="true" BtnClassColor="btnStyle--primary" BtnClassModifiers="" BtnIcon="fa-solid fa-magnifying-glass" BtnOnClick="(()=> OpenNewModal(false))"></ButtonGroupComponent>
                                    </div>
                                    <div class="row">
                                        <ButtonGroupComponent LabelText="Remplazo:" InputPlaceholder="Agregar usuario" BtnTitle="Agregar usuario" @ref="inputReplacementFullname" @bind-InputValue="replacementFullname" InputRequired="true" BtnClassColor="btnStyle--primary" BtnClassModifiers="" BtnIcon="fa-solid fa-magnifying-glass" BtnOnClick="(()=> OpenNewModal(true))"></ButtonGroupComponent>
                                    </div>
                                </div>
                                <div class="col-lg-12">

                                    <div class="mb-2">
                                        <label class="mb-2">Motivo: <span style="color:gray">(@CharacterCounter carateres de 200)</span> </label>
                                        <textarea @bind="@replacemenetCreateDtoRequest.Reason" class="w-100 custom-textarea"  placeholder="" maxlength="200" @oninput="CountCharacters"></textarea>
                                    </div>
                                    </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="from-group from-group--margin-top justify-content-center">

                            <ButtonComponent BtnClassColor="btnStyle--primaryInLine" BtnType="button" BtnText="Limpiar" BtnIcon="fa-solid fa-eraser" BtnOnClick="ResetFormAsync"></ButtonComponent>
                            <ButtonComponent BtnClassColor="btnStyle--primary" BtnClassModifiers="ml-10" BtnType="button" BtnText="Guardar" BtnIcon="fa-solid fa-floppy-disk" BtnOnClick="HandleValidSubmit"></ButtonComponent>
                        </div>
                    </div>
                </div>

            </ChildContent>
        </GenericModalComponent>
    </TelerikRootComponent>
</div>