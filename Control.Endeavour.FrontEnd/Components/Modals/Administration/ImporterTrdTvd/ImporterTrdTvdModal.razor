<div class="my-modal">

    
    <TelerikRootComponent>
        <GenericModalComponent Title="Administración - Importador de TRD/TVD" IsVisible=@modalStatus Width="60%" OnModalClosed="HandleModalClosed">
            
            <ChildContent>
                <div class="container-fluid">
                    
                    <div class="row mt-1">
                        <div class="col-lg-12">
                            <label for="input2">Seleccione una Version Documental<span class="red">*</span></label>
                            <TelerikDropDownList Data="@documentalVersionList"
                            @bind-Value="idDocumentalVersion"
                                                 Id="DocVersion"
                                                 DefaultText="@textDocumentalVersion"
                                                 TextField="Name"
                                                 ValueField="DocumentalVersionId"
                                                 Filterable="true"
                                                 FilterOperator="StringFilterOperator.Contains">
                            </TelerikDropDownList>
                        </div>
                    </div>

                    <div class="row mt-1">
                        <div class="col-lg-12 mt-2">
                            <label for="input2" class="mb-2">Suba su plantilla</label>
                            <DragAndDropTemplateComponent IdInputElement="template" MaxFileSizeMB="@FileSize" VisibleFiles="true"
                                                          FileInfos="template"></DragAndDropTemplateComponent>
                        </div>
                    </div>

                    <div class="row mt-1">
                        <div class="col-lg-12 mt-2">
                            <label class="mb-2">Descripción: <span style="color:gray">(@CharacterCounter carateres de 200)</span> </label>
                            <textarea @bind="@description" class="w-100 custom-textarea" id="GR_Asunto" placeholder="" maxlength="200" @oninput="CountCharacters"></textarea>
                        </div>
                    </div>

                    <div class="row">
                        <div class="from-group from-group--margin-top justify-content-center">
                            <ButtonComponent BtnClassColor="btnStyle--primaryInLine" BtnType="button" BtnText="Limpiar" BtnIcon="fa-solid fa-eraser" BtnOnClick="ResetFormAsync"></ButtonComponent>
                            <ButtonComponent BtnClassColor="btnStyle--primary" BtnClassModifiers="ml-10" BtnType="button" BtnText="Guardar" BtnIcon="fa-solid fa-floppy-disk" BtnOnClick="CreateImport"></ButtonComponent>
                        </div>
                    </div>
                </div>
                <NotificationsComponentModal @ref="notificationModal" OnModalClosed="HandleModalNotiClose"></NotificationsComponentModal>
            </ChildContent>
        </GenericModalComponent>
    </TelerikRootComponent>
</div>