<div class="my-modal">
    <TelerikRootComponent>
        <GenericModalComponent Title="Administración - Series documentales" Width="40%" IsVisible="modalStatus" OnModalClosed="HandleModalClosed">
            <ChildContent>
                <EditForm Model="@serieDtoRequest" OnValidSubmit="HandleValidSubmit">
                    
                    <div class="row p-2">
                        <!-- Parte Izquierda: Input y Label -->
                        <div class="col-md-6">
                            <InputModalComponent IsDisabled=true LabelText="Oficina productora" Placeholder="@ProOfficeName" />
                        </div>
                        <div class="col-md-6 mt-4 ">
                            <div class="from-group mt-3 d-flex align-items-end justify-content-end">
                                <div class="px-2">
                                    <TelerikSwitch @bind-Value="@activeState" />  
                                </div>
                                <div class="px-2">
                                    @(activeState ? "Activo" : "Inactivo")
                                </div>

                            </div>
                        </div>

                    </div>
                    <div class="row p-2">
                        <div class="col-md-6 mb-2">
                            <InputModalComponent IsRequired="true" @bind-InputValue="@serieDtoRequest.Code" LabelText="Código" IsDisabled="@IsDisabledCode" Placeholder="Ingrese el Código" FieldType="InputModalTypeEnum.Code" @ref="codeInput" />
                        </div>
                        <div class="col-md-6 mb-2">
                            <InputModalComponent IsRequired="true" @bind-InputValue="@serieDtoRequest.Name" LabelText="Nombre" Placeholder="Ingrese el Nombre" FieldType="InputModalTypeEnum.Name" @ref="nameInput" />
                        </div>
                       
                    </div>
                    <div class="row p-2">
                        <div class="mb-2">
                            <label class="mb-2">Descripción: <span style="color:gray">(@CharacterCounter carateres de 200)</span> </label>
                            <textarea @bind="@serieDtoRequest.Description" class="w-100 custom-textarea" id="GR_Asunto" placeholder="" maxlength="200" @oninput="CountCharacters"></textarea>
                        </div>


                    </div>
                    <div class="row">

                        <div class="from-group from-group--margin-top justify-content-center">
                            <ButtonComponent BtnClassColor="btnStyle--primaryInLine" BtnType="button" BtnText="Limpiar" BtnIcon="fa-solid fa-eraser" BtnOnClick="ResetFormAsync"></ButtonComponent>
                            <ButtonComponent BtnClassColor="btnStyle--primary" BtnClassModifiers="ml-10" BtnType="submit" BtnText="Guardar" BtnIcon="fa-solid fa-floppy-disk"></ButtonComponent>
                        </div>
                    </div>
                </EditForm>
                <NotificationsComponentModal @ref="notificationModal" OnModalClosed="HandleModalNotiClose"></NotificationsComponentModal>
            </ChildContent>
        </GenericModalComponent>
    </TelerikRootComponent>
</div>