<div class="my-modal">
    <TelerikRootComponent>

        <GenericModalComponent Title="Administración - Datos de las Sucursales" IsVisible="modalStatus" OnModalClosed="HandleModalClosed" Width="50%">
            <ChildContent>
                <div class="container mt-5">
                    <div class="row">
                        <div class="col-lg-6">
                            <InputModalComponent @ref="inputCode" @bind-InputValue="branchOfficeRequest.Code" IsRequired="true" IsDisabled="@IsDisabledCode" LabelText="Código" Placeholder="Ingrese el código" FieldType="InputModalTypeEnum.Code" />

                        </div>
                        <div class="col-lg-6">
                            <InputModalComponent @ref="inputName" @bind-InputValue="branchOfficeRequest.NameOffice" IsRequired="true" LabelText="Nombre" Placeholder="Ingrese el nombre" FieldType="InputModalTypeEnum.Name" />
                        </div>
                        <div class="col-lg-6">
                            <InputModalComponent @ref="inputRegion" @bind-InputValue="branchOfficeRequest.Region" LabelText="Macro regional" Placeholder="Ingrese el macro regional" FieldType="InputModalTypeEnum.None" />
                        </div>
                        <div class="col-lg-6">
                            <InputModalComponent @ref="inputTerritory" @bind-InputValue="branchOfficeRequest.Territory" LabelText="Territorio" Placeholder="Ingrese el territorio" FieldType="InputModalTypeEnum.None" />
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-lg-12 mt-1">
                            <ButtonGroupComponent LabelText="Dirección:" InputPlaceholder="Agregar dirección" BtnTitle="Agregar dirección" @ref="inputAddress" @bind-InputValue="addressString" InputRequired="true" BtnClassColor="btnStyle--primary" BtnClassModifiers="" BtnIcon="fa-solid fa-plus" BtnOnClick="OpenNewModal"></ButtonGroupComponent>
                        </div>
                    </div>
                    <div class="row">
                        <div class="from-group from-group--margin-top justify-content-center">
                            <ButtonComponent BtnClassColor="btnStyle--primaryInLine" BtnType="button" BtnText="Limpiar" BtnIcon="fa-solid fa-eraser" BtnOnClick="ResetFormAsync "></ButtonComponent>
                            <ButtonComponent BtnClassColor="btnStyle--primary" BtnClassModifiers="ml-10" BtnType="button" BtnText="Guardar" BtnIcon="fa-solid fa-floppy-disk" BtnOnClick="HandleValidSubmit"></ButtonComponent>
                        </div>
                    </div>
                </div>
                <NotificationsComponentModal @ref="notificationModal" OnModalClosed="HandleModalNotiClose"></NotificationsComponentModal>
            </ChildContent>
        </GenericModalComponent>
    </TelerikRootComponent>
</div>


