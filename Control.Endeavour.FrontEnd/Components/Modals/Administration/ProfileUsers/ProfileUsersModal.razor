<div class="my-modal">

    <TelerikRootComponent>
        <GenericModalComponent Title="Administración - Perfiles de Funcionarios" IsVisible=ModalStatus Width="60%" OnModalClosed="HandleModalClosed">
            <ChildContent>
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="row">
                                    <div class="col-lg-6 mt-2">
                                        <InputModalComponent IsVisible=true @ref="profileCode" @bind-InputValue="profileDtoRequest.ProfileCode" IsDisabled="@IsDisabledCode" IsRequired="true" LabelText="Código" Placeholder="Ingrese el código" FieldType="InputModalTypeEnum.Code" />
                                    </div>

                                    <div class="col-lg-6 mt-2">
                                    <label class="mb-2">Nombre<span class="red">*</span></label>
                                        <div class="from-group">
                                        <InputModalComponent IsVisible=true @ref="profile1" @bind-InputValue="profileDtoRequest.Profile1" IsRequired="true" LabelText="" Placeholder="Nombre" FieldType="InputModalTypeEnum.Name" />
                                            <label><TelerikSwitch @bind-Value="@stateValue" Class="ml-10" />  @(stateValue ? "Activo" : "Inactivo")</label>
                                        </div>
                                    </div>

                                    <div class="col-lg-12 mt-2">
                                        <label class="mb-2">Descripción</label>
                                        <textarea class="w-100 custom-textarea" id="description" placeholder="Ingrese la descripción" maxlength="500" @bind="@description"></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="from-group from-group--margin-top justify-content-center">
                                <ButtonComponent BtnClassColor="btnStyle--primaryInLine" BtnType="button" BtnText="Limpiar" BtnIcon="fa-solid fa-eraser" BtnOnClick="ResetFormAsync"></ButtonComponent>
                                <ButtonComponent BtnClassColor="btnStyle--primary" BtnClassModifiers="ml-10" BtnType="button" BtnText="Guardar" BtnIcon="fa-solid fa-floppy-disk" BtnOnClick="HandleValidSubmit"></ButtonComponent>
                            </div>
                        </div>
                    </div>
                <NotificationsComponentModal @ref="notificationModal" OnModalClosed="HandleModalNotiClose"></NotificationsComponentModal>
            </ChildContent>
        </GenericModalComponent>
    </TelerikRootComponent>
</div>