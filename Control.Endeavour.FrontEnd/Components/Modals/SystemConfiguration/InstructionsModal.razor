<div class="my-modal">
    <TelerikRootComponent>
        <GenericModalComponent Title="Parametrización - Instrucciones de la gestión" IsVisible="modalStatus" OnModalClosed="HandleModalClosed" Width="50%">
            <ChildContent>
                <EditForm Model="@instruccionDtoResponse" OnValidSubmit="HandleValidSubmit">

                    <div class="row p-2">
                        <div class="col-md-6 mb-2">
                            <InputModalComponent LabelText="Nombre:" Placeholder="Nombre de la instrucción" IsRequired="true" @bind-InputValue="instruccionDtoResponse.Name"></InputModalComponent>
                        </div>
                        <div class="col-md-6 mb-2">
                            <label class="mb-2">Clase: <span class="red">*</span></label>
                            <TelerikDropDownList Data="@classCodeList"
                                                 @bind-Value="instruccionDtoResponse.ClassCode"
                                                 Id="GR_TipoDoc"
                                                 DefaultText="@ClassNameText"
                                                 TextField="Value"
                                                 ValueField="Code"
                                                 Filterable="true">
                            </TelerikDropDownList>
                        </div>
                    </div>
                    <div class="row">
                        <div class="from-group from-group--margin-top justify-content-center">
                            <ButtonComponent BtnClassColor="btnStyle--primaryInLine" BtnType="button" BtnText="Limpiar" BtnIcon="fa-solid fa-eraser" BtnOnClick="ResetFormAsync"></ButtonComponent>
                            <ButtonComponent BtnClassColor="btnStyle--primary" BtnClassModifiers="ml-10" BtnType="submit" BtnText="Guardar" BtnIcon="fa-solid fa-floppy-disk"></ButtonComponent>
                        </div>
                    </div>
                </EditForm>
            </ChildContent>
        </GenericModalComponent>
    </TelerikRootComponent>
</div>

<NotificationsComponentModal @ref="notificationModal" OnModalClosed="HandleModalNotiClose"></NotificationsComponentModal>