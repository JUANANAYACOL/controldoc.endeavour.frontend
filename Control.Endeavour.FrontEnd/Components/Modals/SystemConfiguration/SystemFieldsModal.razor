<div class="my-modal">
    <TelerikRootComponent>
        <GenericModalComponent Title="Administración - Parámetros generales del sistema" IsVisible="modalStatus" OnModalClosed="HandleModalClosed" Width="60%">
            <ChildContent>
                    <EditForm Model="@systemFieldsDtoRequest" OnValidSubmit="HandleValidSubmit">
                        
                        <div class="row p-2">
                            <div class="col-md-6 mb-2">
                                <InputModalComponent LabelText="Id:" Placeholder="Número de identificación" IsDisabled=true @bind-InputValue="@systemFieldId"></InputModalComponent>
                            </div>
                            <div class="col-md-6 mb-2">
                                <InputModalComponent @ref="inputCode" @bind-InputValue="systemFieldsDtoRequest.Code" LabelText="Código:" Placeholder="Ingrese el código" FieldType="InputModalTypeEnum.Code" IsRequired="true" IsDisabled="@IsDisabledCode"></InputModalComponent>
                            </div>
                        </div>
                        <div class="row p-2">
                            <label class="mb-2">Ingrese el valor: <span style="color: gray">(@characterCounterValue caracteres de 200)</span> <span class="red">*</span></label>
                            <div class="px-2">
                                <textarea class="w-100 custom-textarea" placeholder="" maxlength="200" @bind="systemFieldsDtoRequest.Value" @oninput="@(e => CountCharacters(e,ref characterCounterValue))"></textarea>
                            </div>
                        </div>
                        <div class="row p-2">
                            <label class="mb-2">Ingrese el comentario: <span style="color: gray">(@characterCounterComment caracteres de 500)</span> <span class="red">*</span></label>
                            <div class="px-2">
                                <textarea class="w-100 custom-textarea" placeholder="" maxlength="500" @bind="systemFieldsDtoRequest.Coment" @oninput="@(e => CountCharacters(e,ref characterCounterComment))"></textarea>
                            </div>
                        </div>
                        <div class="row">
                            <div class="from-group from-group--margin-top justify-content-center">
                                <ButtonComponent BtnClassColor="btnStyle--primaryInLine" BtnType="button" BtnText="Limpiar" BtnIcon="fa-solid fa-eraser" BtnOnClick="ResetFormAsync"></ButtonComponent>
                                <ButtonComponent BtnClassColor="btnStyle--primary" BtnClassModifiers="ml-10" BtnType="submit" BtnText="Guardar" BtnIcon="fa-solid fa-floppy-disk"></ButtonComponent>
                            </div>
                        </div>
                    </EditForm>
            </ChildContent>
        </GenericModalComponent>
    </TelerikRootComponent>
</div>

<NotificationsComponentModal @ref="notificationModal" OnModalClosed="HandleModalNotiClose"></NotificationsComponentModal>
